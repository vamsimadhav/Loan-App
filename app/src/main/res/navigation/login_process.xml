    android:id="@+id/login_process"
    app:startDestination="@id/fragment_Login_Screen">

    <fragment
        android:id="@+id/fragment_Login_Screen"
        android:name="com.example.loanapp.login.FragmentLoginScreen"
        android:label="fragment_login_screen"
        tools:layout="@layout/fragment_login_screen" >
        <action
            android:id="@+id/action_fragment_Login_Screen_to_fragment_Otp_Verification"
            app:destination="@id/fragment_Otp_Verification" />
    </fragment>
    <fragment
        android:id="@+id/fragment_Otp_Verification"
        android:name="com.example.loanapp.login.FragmentOtpVerification"
        android:label="fragment_otp_verification_screen"
